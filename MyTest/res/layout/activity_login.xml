<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/app_background_color"
    tools:context=".LoginActivity" >

    <RelativeLayout
        android:id="@+id/LoginAskForHelpButtonBorder"
        android:layout_width="fill_parent"
        android:layout_height="195dip"
        android:background="@color/button_border" >
        
		<Button
	        android:id="@+id/LoginAskForHelpButton"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_margin="3dip"
	        android:background="@color/login_up_button"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:text="@string/login_ask_for_help_button_text"
	        android:textSize="50sp"
	        android:textStyle="bold" />
    </RelativeLayout>
    
    <View
        android:id="@+id/LoginButtonBuffer"
        android:layout_width="fill_parent"
        android:layout_height="20dip"
        android:layout_below="@+id/LoginAskForHelpButtonBorder" />
    
	<RelativeLayout
        android:id="@+id/LoginAssistButtonBorder"
        android:layout_width="fill_parent"
        android:layout_height="195dip"
        android:background="@color/button_border"
        android:layout_below="@+id/LoginButtonBuffer" >
    
	    <Button
	        android:id="@+id/LoginAssistButton"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_margin="3dip"
	        android:background="@color/login_up_button"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:text="@string/login_assist_button_text"
	        android:textSize="50sp"
	        android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>
